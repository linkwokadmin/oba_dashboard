<div class="modal fade" id="modal-forgotPass" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">
                <h2>Forgot Password?</h2>

                <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :post}) do |f| %>
                    <%= f.error_notification %>
                    <p>Enter your e-mail address below to reset your password.</p>

                    <div class="form-inputs">
                        <div class="form-group">
                            <div class="input-icon-left m-top-15">
                                <i class="fa fa-envelope input-icon"></i>
                                <%= f.input :email, placeholder: 'Enter Email', label: false, required: true, autofocus: true, layout: false %>
                            </div>
                        </div>
                    </div>

                    <div class="form-actions">
                        <%= f.button :submit, "Send me Reset Password Instructions", class: 'btn btn-primary btn-block rounded' %>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>

<div class="login-wrapper">
    <div class="text-center">
        <h1>OBA DASHBOARD</h1>
    </div>

    <div class="panel">
        <div class="panel-body">
            <h2>Sign In</h2>

            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <div class="form-inputs">
                    <div class="form-group">
                        <div class="input-icon-left">
                            <i class="fa fa-user input-icon"></i>
                            <%= f.input :email, placeholder: 'Enter Username', input_html: {class: 'rounded'}, label: false, required: false, autofocus: true, layout: false %>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="input-icon-left">
                            <i class="fa fa-user input-icon"></i>
                            <%= f.input :password, placeholder: 'Enter Password', input_html: {class: 'rounded'}, label: false, required: false, layout: false %>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="checkbox">
                            <%= f.input :remember_me, as: :boolean, input_html: {class: 'icheck-minimal-grey'}, layout: false if devise_mapping.rememberable? %>
                        </div>
                    </div>
                </div>

                <div class="form-actions">
                    <%= f.button :submit, "Sign in", class: 'btn btn-primary-outline btn-block rounded' %>
                    <%= link_to 'Forgot Password?', '#', class: 'm-top-5', data: {toggle: 'modal', target: '#modal-forgotPass'} %>
                </div>
            <% end %>
        </div>
    </div>
</div>
